{
    "name": "HumanSeg",
    "n_gpu": 1,
    
    "arch": {
        "type": "DeepLab",
        "args": {
            "backbone": "resnet18",
            "output_stride": 16,
            "num_classes": 1,
            "freeze_bn": false,
            "pretrained_backbone": "/data4/livesegmentation/thuync/PyTorch-pretrained/resnet18.pth"
        }
    },

    "train_loader": {
        "type": "SegmentationDataLoader",
        "args":{
            "pairs_file": "dataset/server205_train_mask_pairs_full.txt",
            "color_channel": "RGB",
            "resize": 224,
            "padding_value": 0,
            "is_training": true,
            "noise_std": 3,
            "crop_range": [0.70, 1.0],
            "flip_hor": 0.5,
            "rotate": 0.3,
            "angle": 15,
            "normalize": true,
            "one_hot": false,
            "shuffle": true,
            "batch_size": 32,
            "n_workers": 48,
            "pin_memory": true
        }
    },

    "valid_loader": {
        "type": "SegmentationDataLoader",
        "args":{
            "pairs_file": "dataset/server205_valid_mask_pairs_full.txt",
            "color_channel": "RGB",
            "resize": 224,
            "padding_value": 0,
            "is_training": false,
            "normalize": true,
            "one_hot": false,
            "shuffle": false,
            "batch_size": 32,
            "n_workers": 48,
            "pin_memory": true
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 1e-8
        }
    },

    "loss": "dice_loss_with_sigmoid",
    "metrics": [
        "iou_with_sigmoid"
    ],

    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size": 100,
            "gamma": 1.0
        }
    },

    "trainer": {
        "epochs": 200,
        "save_dir": "/data4/livesegmentation/thuync/checkpoints/PyTorch",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "valid_loss",
        "monitor_mode": "min"
    },

    "visualization":{
        "tensorboardX": true,
        "log_dir": "/data4/livesegmentation/thuync/checkpoints/PyTorch"
    }
}